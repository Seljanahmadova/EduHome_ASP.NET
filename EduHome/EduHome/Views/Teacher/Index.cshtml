@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Index";
}
                <!-- Teacher Start -->
                <div class="teacher-area pt-150 pb-105">
                    <div class="container">
                        <div class="row">
                            @foreach (Teacher item in Model)
                            {
                                <div class="col-md-3 col-sm-4 col-xs-12">
                                    <div class="single-teacher mb-45">
                                        <div class="single-teacher-img">
                                            <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/teacher/@item.Image" alt="teacher"></a>
                                        </div>
                                        <div class="single-teacher-content text-center">
                                            <h2><a>@item.Fullname</a></h2>
                                            <h4>@item.Profession</h4>
                                            <ul>
                                                <li><a href="@item.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                                <li><a href="@item.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                                <li><a href="@item.Vimeo"><i class="zmdi zmdi-vimeo"></i></a></li>
                                                <li><a href="@item.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                            </div>
                    </div>
                </div>
                <!-- Teacher End -->
  